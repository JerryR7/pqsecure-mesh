# PQSecure Mesh Environment Variables Example

# Configuration file path (default: config/config.yaml.example)
PQSECURE_CONFIG=config/config.yaml

# CA configuration
PQSECURE_CA_API_URL=https://step-ca:9000
PQSECURE_CA_TOKEN=your-secure-token-here

# Proxy configuration
PQSECURE_LISTEN_ADDR=0.0.0.0:8443
PQSECURE_BACKEND_ADDR=backend:8080

# Telemetry configuration
PQSECURE_OTEL_ENDPOINT=http://otel-collector:4317

# Logging level (used by tracing)
RUST_LOG=info,pqsecure_mesh=debug,tokio=warn,rustls=warn

# Certificate and key paths (optional, defaults in config.yaml)
# PQSECURE_CERT_PATH=./certs/cert.pem
# PQSECURE_KEY_PATH=./certs/key.pem

# SPIFFE ID configuration (optional, default in config.yaml)
# PQSECURE_SPIFFE_ID=spiffe://example.org/service/pqsecure-mesh

# Policy file path (optional, default in config.yaml)
# PQSECURE_POLICY_PATH=./config/policy.yaml

# Connection timeout in seconds (optional, default in config.yaml)
# PQSECURE_TIMEOUT_SECONDS=30

# Protocol enablement (optional, defaults in config.yaml)
# PQSECURE_ENABLE_TCP=true
# PQSECURE_ENABLE_HTTP=true
# PQSECURE_ENABLE_GRPC=true